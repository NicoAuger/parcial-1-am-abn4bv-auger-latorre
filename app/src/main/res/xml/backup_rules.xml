<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <!-- Decido ser explícito: por ahora no tengo bases de datos ni prefs críticas,
         así que permito el respaldo de prefs, y si mañana agrego algo sensible lo excluyo puntualmente. -->

    <cloud-backup>
        <!-- Incluyo SharedPreferences por defecto -->
        <include domain="sharedpref" path="." />
        <!-- Ejemplo de exclusión futura (descomentar si hicieras prefs sensibles):
        <exclude domain="sharedpref" path="secret_prefs.xml" />
        -->
    </cloud-backup>

    <device-transfer>
        <!-- Para migraciones de dispositivo a dispositivo, mantengo mismo criterio -->
        <include domain="sharedpref" path="." />
    </device-transfer>
</data-extraction-rules>
